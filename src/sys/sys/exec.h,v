@/*	$MirBSD: src/sys/sys/exec.h,v 1.3 2003/06/06 18:29:35 tg Exp $	*/
/*	$OpenBSD: exec.h,v 1.22 2004/04/15 00:22:42 tedu Exp $	*/
/*	$NetBSD: exec.h,v 1.59 1996/02/09 18:25:09 christos Exp $	*/

/*-
