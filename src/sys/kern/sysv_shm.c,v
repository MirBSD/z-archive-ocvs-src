	o->shm_nattch = n->shm_nattch;
	o->shm_atime = n->shm_atime;
	o->shm_dtime = n->shm_dtime;
	o->shm_ctime = n->shm_ctime;
	o->shm_internal = n->shm_internal;
	ipc_n2o(&n->shm_perm, &o->shm_perm);
