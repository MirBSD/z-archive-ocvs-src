except for sbin/bootsys/i386/mbrldr/mbr.S which is to be committed later
@
text
@# $MirBSD: Makefile,v 1.6 2003/10/30 12:49:40 tg Exp $

  SUBDIR+= default
  SUBDIR+= simple

.include <bsd.subdir.mk>
@


