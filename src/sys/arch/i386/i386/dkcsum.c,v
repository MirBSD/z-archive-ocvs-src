@/* $MirBSD: src/sys/arch/i386/i386/dkcsum.c,v 1.5 2004/05/10 15:03:27 tg Exp $	*/
/* $OpenBSD: dkcsum.c,v 1.11 2003/06/03 20:31:07 deraadt Exp $ */

/*-
