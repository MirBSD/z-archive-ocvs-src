@d1 1
a1 1
/*	$OpenBSD: fpu.c,v 1.4 2002/09/15 09:01:59 deraadt Exp $	*/
d42 1
a42 2
enable_fpu(p)
	struct proc *p;
d44 1
a44 1
	int msr, scratch;
d53 4
a56 2
	asm volatile ("mfmsr %0; ori %1,%0,%2; mtmsr %1; isync"
		      : "=r"(msr), "=r"(scratch) : "K"(PSL_FP));
d90 2
a91 1
	asm volatile ("mtmsr %0; isync" :: "r"(msr));
d95 1
a95 2
save_fpu(p)
	struct proc *p;
d97 7
a103 2
	int msr, scratch;
	struct pcb *pcb = &p->p_addr->u_pcb;
d105 4
a108 2
	asm volatile ("mfmsr %0; ori %1,%0,%2; mtmsr %1; isync"
		      : "=r"(msr), "=r"(scratch) : "K"(PSL_FP));
d142 2
a143 1
	asm volatile ("mtmsr %0; isync" :: "r"(msr));
