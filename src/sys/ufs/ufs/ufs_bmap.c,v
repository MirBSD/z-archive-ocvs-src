@/*	$MirBSD$ */
/*	$OpenBSD: ufs_bmap.c,v 1.16 2003/06/02 23:28:23 millert Exp $	*/
/*	$NetBSD: ufs_bmap.c,v 1.3 1996/02/09 22:36:00 christos Exp $	*/

