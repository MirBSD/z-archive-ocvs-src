	@@ECHO_CC@@if test -n "$(COMPRESS_EXT)"; then echo 's%\$(COMPRESS_EXT)\$(COMPRESS_EXT)%$(COMPRESS_EXT)%g' >> $@@; fi
	@@-rm -f help_files.tmp

