    \expandafter\def\csname ##1\endcsname{@@##1\space}%
  }%
  \def\definedummyletter##1{%
    \expandafter\def\csname ##1\endcsname{@@##1}%
  }%
  \let\definedummyaccent\definedummyletter
  %
  % Do the redefinitions.
  \commondummies
}
