  PARAMS ((bfd *, Elf_Internal_Shdr *, asection *));
static void merge_sections_remove_hook
  PARAMS ((bfd *, asection *));
static void elf_fake_sections
  PARAMS ((bfd *, asection *, PTR));
static bfd_boolean assign_section_numbers
  PARAMS ((bfd *));
