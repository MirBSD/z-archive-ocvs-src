      proc_warn (pi, "proc_get_LDT_entry (PIOCLDT)", __LINE__);
      return NULL;
    }
d1825 11
a1835 7
  /* Search the table and return the (first) entry matching 'key'. */
  for (i = 0; i < nldt; i++)
