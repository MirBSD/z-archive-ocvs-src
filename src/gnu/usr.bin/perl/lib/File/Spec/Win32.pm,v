sub catdir {
    my $self = shift;
    my @@args = @@_;
    foreach (@@args) {
	tr[/][\\];
        # append a backslash to each argument unless it has one there
        $_ .= "\\" unless m{\\$};
    }
    return $self->canonpath(join('', @@args));
}

