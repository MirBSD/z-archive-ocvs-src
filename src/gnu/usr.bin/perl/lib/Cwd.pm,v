# user-level functions to the right places

if (exists $METHOD_MAP{$^O}) {
  my $map = $METHOD_MAP{$^O};
  foreach my $name (keys %$map) {
    no warnings;	# assignments trigger 'subroutine redefined' warning
    no strict 'refs';
