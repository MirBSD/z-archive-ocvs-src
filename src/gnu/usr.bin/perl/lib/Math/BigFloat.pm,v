sub _is_zero_or_one
  {
  # internal, return true if BigInt arg is zero or one, saving the
  # two calls to is_zero() and is_one() 
  my $x = $_[0];

  $x->{sign} eq '+' && ($x->is_zero() || $x->is_one());
  }

