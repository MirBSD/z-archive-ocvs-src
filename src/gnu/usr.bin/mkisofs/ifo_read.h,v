@/* @@(#)ifo_read.h	1.1 02/07/20 joerg */

#ifndef _IFO_READ_H
#define _IFO_READ_H

/*
 * Copyright (C) 2000, 2001, 2002 Björn Englund <d4bjorn@@dtek.chalmers.se>,
 *				  Håkan Hjort <d95hjort@@dtek.chalmers.se
