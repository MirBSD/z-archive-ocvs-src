/* Provide a LINK_SPEC appropriate for MirBSD ELF.  Here we provide
   support for the special GCC options -assert, -R, -rpath, -shared,
   -nostdlib, -static.  */

#undef LINK_SPEC
#define LINK_SPEC							\
  "%{assert*} %{R*} %{rpath*}						\
   %{g:%{!nostdlib:-L/usr/lib/debug}}					\
   %{shared:-Bshareable -x}						\
   %{!shared:								\
     -dc -dp								\
     %{!nostdlib:							\
       %{!r*:								\
	 %{!e*:-e __start}}}						\
    %{!static:-Bdynamic}						\
     %{static:-Bstatic}}"
@

