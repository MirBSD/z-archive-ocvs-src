#ifndef lint
#if 0
static char sccsid[] = "@@(#)dr_2.c	8.1 (Berkeley) 5/31/93";
#else
static char rcsid[] = "$OpenBSD: dr_2.c,v 1.2 1999/01/18 06:20:52 pjanzen Exp $";
