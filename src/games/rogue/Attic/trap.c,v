#ifndef lint
#if 0
static char sccsid[] = "@@(#)trap.c	8.1 (Berkeley) 5/31/93";
#else
static const char rcsid[] = "$OpenBSD: trap.c,v 1.4 2002/07/18 07:13:57 pjanzen Exp $";
