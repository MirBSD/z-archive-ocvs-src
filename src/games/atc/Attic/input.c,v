#ifndef lint
#if 0
static char sccsid[] = "@@(#)input.c	8.1 (Berkeley) 5/31/93";
#else
static char rcsid[] = "$OpenBSD: input.c,v 1.7 2002/02/16 21:27:08 millert Exp $";
#endif
