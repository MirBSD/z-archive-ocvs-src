#ifndef lint
#if 0
static char sccsid[] = "@@(#)save.c	8.2 (Berkeley) 4/28/95";
#else
static char rcsid[] = "$OpenBSD: save.c,v 1.8 1999/09/25 20:30:46 pjanzen Exp $";
