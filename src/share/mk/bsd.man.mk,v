	rm -f $$instpage; \
	echo ${MCOMPRESS} $$page \>$$instpage; \
	${MCOMPRESS} $$page >$$instpage; \
	chown ${MANOWN}:${MANGRP} $$instpage; \
	chmod ${MANMODE} $$instpage
.endif
