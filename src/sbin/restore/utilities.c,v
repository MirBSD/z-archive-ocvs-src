#ifndef lint
#if 0
static char sccsid[] = "@@(#)utilities.c	8.4 (Berkeley) 10/18/94";
#else
static char rcsid[] = "$OpenBSD: utilities.c,v 1.11 2003/03/13 05:00:44 deraadt Exp $";
