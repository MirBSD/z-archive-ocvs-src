@/*	$MirBSD: src/usr.sbin/rdate/rdate.c,v 1.9 2004/05/21 20:08:57 tg Exp $	*/
/*	$OpenBSD: rdate.c,v 1.22 2004/02/18 20:10:53 jmc Exp $	*/
/*	$NetBSD: rdate.c,v 1.4 1996/03/16 12:37:45 pk Exp $	*/

/*
