@/**	$MirBSD: src/usr.sbin/rdate/ntp.c,v 1.5 2004/05/21 20:08:55 tg Stab $	*/
/*	$OpenBSD: ntp.c,v 1.15 2004/02/16 21:25:41 jakob Exp $	*/

