#ifndef lint
#if 0
static const char sccsid[] = "@@(#)create.c	8.1 (Berkeley) 6/6/93";
#else
static const char rcsid[] = "$OpenBSD: create.c,v 1.18 2002/03/14 17:01:16 millert Exp $";
