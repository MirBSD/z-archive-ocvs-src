@/*	$MirBSD: src/usr.bin/oldrdist/expand.c,v 1.2 2004/01/29 21:33:15 tg Stab $	*/
/*	$OpenBSD: expand.c,v 1.11 2003/06/03 02:56:14 millert Exp $	*/

/*
