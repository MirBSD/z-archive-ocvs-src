	static char buffer[16];	/* result is built here */
	char *ptr;

	/*
	 * 16 is sufficient since the largest number we will ever convert
	 * will be 2^32-1, which is 10 digits.
	 */
	ptr = buffer + sizeof(buffer);
	*--ptr = '\0';
	if (val == 0) {
		*--ptr = '0';
	} else {
		while (val != 0) {
			*--ptr = (val % 10) + '0';
			val /= 10;
		}
	}
	return (ptr);
