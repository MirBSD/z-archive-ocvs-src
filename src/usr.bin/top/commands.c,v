static int 
scanint(char *str, int *intp)
{
	int val = 0;
	char ch;

	/* if there is nothing left of the string, flag it as an error */
	/* This fix is dedicated to Greg Earle */
	if (*str == '\0')
		return (-1);

	while ((ch = *str++) != '\0') {
		if (isdigit(ch))
			val = val * 10 + (ch - '0');
		else if (isspace(ch))
			break;
		else
			return (-1);
