d8 1
a8 1
CLEANFILES+=vi.ref.txt index index.so
d11 1
a11 4
	soelim vi.ref | ${TBL} | ${ROFF} > ${.TARGET}

vi.ref.txt: vi.ref index.so
	soelim vi.ref | ${TBL} | groff ${MACROS} -Tascii > $@@
d15 2
a16 1
	soelim vi.ref | ${TBL} | ${ROFF} > /dev/null
d20 1
a20 1
	    -e 's/ /__SPACE/g' < index | \
d22 1
a22 1
	sed -e 's/__SPACE/ /g' > index.so
@


