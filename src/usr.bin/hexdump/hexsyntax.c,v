#include <sys/types.h>

#include <err.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>

#include "hexdump.h"

__SCCSID("@@(#)hexsyntax.c	5.2 (Berkeley) 5/8/90");
__RCSID("$MirBSD$");

off_t skip;				/* bytes to skip */

void
newsyntax(int argc, char ***argvp)
{
	int ch, hexmode = 0;
	char *p, **argv, *myname;

	argv = *argvp;
	myname = strrchr(argv[0], '/');
	myname = (myname ? (myname + 1) : argv[0]);
	if (!strcmp(myname, "hd"))
		++hexmode;

	while ((ch = getopt(argc, argv, "bcCde:f:Hn:os:vx")) != -1)
		switch (ch) {
		case 'b':
			add("\"%07.7_Ax\n\"");
			add("\"%07.7_ax \" 16/1 \"%03o \" \"\\n\"");
			break;
		case 'c':
			add("\"%07.7_Ax\n\"");
			add("\"%07.7_ax \" 16/1 \"%3_c \" \"\\n\"");
			break;
		case 'C':
			add("\"%08.8_Ax\n\"");
			add("\"%08.8_ax  \" 8/1 \"%02x \" \"  \" 8/1 \"%02x \" ");
			add("\"  |\" 16/1 \"%_p\" \"|\\n\"");
			break;
		case 'd':
			add("\"%07.7_Ax\n\"");
			add("\"%07.7_ax \" 8/2 \"  %05u \" \"\\n\"");
			break;
		case 'e':
			add(optarg);
			break;
		case 'f':
			addfile(optarg);
			break;
		case 'H':
			add("\"%08.8_aX  \" 8/1 \"%02X \" \" - \" 8/1 \"%02X \"");
			add("\"  |\" \"%_p\"");
			add("\"|\n\"");
			break;
		case 'n':
			if ((length = atoi(optarg)) < 0)
				errx(1, "%s: bad length value", optarg);
			break;
		case 'o':
			add("\"%07.7_Ax\n\"");
			add("\"%07.7_ax \" 8/2 \" %06o \" \"\\n\"");
			break;
		case 's':
			if ((skip = strtol(optarg, &p, 0)) < 0)
				errx(1, "%s: bad skip value", optarg);
			switch(*p) {
			case 'b':
				skip *= 512;
				break;
			case 'k':
				skip *= 1024;
				break;
			case 'm':
				skip *= 1048576;
				break;
			}
			break;
		case 'v':
			vflag = ALL;
			break;
		case 'x':
			add("\"%07.7_Ax\n\"");
			add("\"%07.7_ax \" 8/2 \"   %04x \" \"\\n\"");
			break;
		case '?':
			usage();
		}

	if (!fshead) {
	    if (hexmode) {
		add("\"%08.8_aX  \" 8/1 \"%02X \" \" - \" 8/1 \"%02X \"");
		add("\"  |\" \"%_p\"");
		add("\"|\n\"");
	    } else {
		add("\"%07.7_Ax\n\"");
		add("\"%07.7_ax \" 8/2 \"%04x \" \"\\n\"");
	    }
	}

	*argvp += optind;
}

void
usage(void)
{
	extern char *__progname;
	fprintf(stderr, "usage: %s [-bcCdovx] [-e fmt] [-f fmt_file] "
			"[-n length] [-s skip] [file ...]\n", __progname);
	exit(1);
}
