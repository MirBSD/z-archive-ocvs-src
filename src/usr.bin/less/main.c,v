	public int
sprefix(ps, s, uppercase)
	char *ps;
	char *s;
	int uppercase;
{
	register int c;
	register int sc;
	register int len = 0;

	for ( ;  *s != '\0';  s++, ps++)
	{
		c = *ps;
		if (uppercase)
		{
			if (len == 0 && SIMPLE_IS_LOWER(c))
				return (-1);
			if (SIMPLE_IS_UPPER(c))
				c = SIMPLE_TO_LOWER(c);
		}
		sc = *s;
		if (len > 0 && SIMPLE_IS_UPPER(sc))
			sc = SIMPLE_TO_LOWER(sc);
		if (c != sc)
			break;
		len++;
	}
	return (len);
}

