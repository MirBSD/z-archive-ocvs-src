static const char *
logfac2str(n)
    int n;
{
#ifdef LOG_NFACILITIES
    struct strmap *fac;

    for (fac = facilities; fac->name && fac->num != n; fac++)
	;
    return (fac->name);
#else
    return ("default");
#endif /* LOG_NFACILITIES */
}

