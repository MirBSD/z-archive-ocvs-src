SSLASM=\
	bf bf-586 \
	bn bn-586 \
	bn co-586 \
	cast cast-586 \
	des des-586 \
	md5 md5-586 \
	rc4 rc4-586 \
	ripemd rmd-586 \
	sha sha1-586
.for dir f in ${SSLASM}
SRCS+=	${f}.S
GENERATED+=${f}.S
${f}.S: ${LCRYPTO_SRC}/${dir}/asm/${f}.pl ${LCRYPTO_SRC}/perlasm/x86unix.pl
	/usr/bin/perl -I${LCRYPTO_SRC}/perlasm -I${LCRYPTO_SRC}/${dir}/asm \
		${LCRYPTO_SRC}/${dir}/asm/${f}.pl openbsd-elf 386 > ${.TARGET}
.endfor
SRCS+= bf_cbc.c
.else
SRCS+= bf_enc.c
SRCS+= bn_asm.c
SRCS+= rc4_enc.c
.endif

