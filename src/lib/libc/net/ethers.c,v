@/*	$MirBSD: src/lib/libc/net/ethers.c,v 1.2 2003/10/26 22:19:09 tg Exp $	*/
/*	$OpenBSD: ethers.c,v 1.17 2004/02/16 19:41:12 otto Exp $	*/

/*
