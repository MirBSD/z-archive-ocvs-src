#if !defined(lint) && !defined(SCCSID)
#if 0
static char sccsid[] = "@@(#)tokenizer.c	8.1 (Berkeley) 6/4/93";
#else
static char rcsid[] = "$OpenBSD: tokenizer.c,v 1.5 2002/02/16 21:27:26 millert Exp $";
