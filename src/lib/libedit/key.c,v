#if !defined(lint) && !defined(SCCSID)
#if 0
static char sccsid[] = "@@(#)key.c	8.1 (Berkeley) 6/4/93";
#else
static char rcsid[] = "$OpenBSD: key.c,v 1.5 2002/02/17 19:42:25 millert Exp $";
#endif
